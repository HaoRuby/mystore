<!-- override frontend's _header -->
<!-- dir: views/spree/shared/_header -->
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#search-nav" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to raw('Trái Cây Sạch <small>Thực phẩm vì sức khỏe</small>'),
      spree.root_path, class: 'navbar-brand'%>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="search-nav">
      <div class="row" id="navbar-row-one">
        <div class="container">
          <div class="navbar-right">
            <ul data-hook>
              <li>
                <%= render :partial => 'spree/shared/search' %>
              </li>
              <li id="link-to-cart" data-hook>
                <noscript>
                  <%= link_to Spree.t(:cart), '/cart' %>
                </noscript>
                &nbsp;
              </li>
              <script>Spree.fetch_cart()</script>
            </ul>
          </div> <!--/navbar-right-->
        </div>
      </div> <!--/row 1-->
      <div class="row" id="navbar-row-two">
        <div class="container">
          <%= render partial: 'layouts/navbar_row_two' %>
        </div>
      </div> <!--/row 2-->
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container -->
</nav>